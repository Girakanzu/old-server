# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Authentication
GET     /web/auth                   controllers.Proxy.authGet
POST    /api/login                  controllers.Proxy.loginPost
POST    /api/logout                 controllers.Proxy.logoutPost

# Lobby (web: HTML-UI, api: JSON/HTTP-POST backend)
GET     /web/lobby                  controllers.Proxy.webLobbyGet
GET     /api/lobby                  controllers.Proxy.apiLobbyGet
GET     /web/character              controllers.Proxy.charGet(action: String, name: String ?="")
POST    /api/character              controllers.Proxy.charPost(action: String, name: String ?="")

# World
GET     /api/world                  controllers.Proxy.worldGet(chara: String, map: String?="HeroesAscent")

# Web Client
GET     /web/client                 controllers.Proxy.clientGet(chara: String, map: String?="HeroesAscent")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public/assets", file)
