# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Authentication
GET     /web/auth                   entice.server.Global.authGet
POST    /api/login                  entice.server.Global.loginPost
POST    /api/logout                 entice.server.Global.logoutPost

# Lobby (web: HTML-UI, api: JSON/HTTP-POST backend)
GET     /web/lobby                  entice.server.Global.webLobby
GET     /api/lobby                  entice.server.Global.apiLobby
GET     /web/character              entice.server.Global.charGet(action: String, name: String ?="")
POST    /api/character              entice.server.Global.apiCharPost(action: String, name: String ?="")

# World
GET     /api/world                  entice.server.Global.world(chara: String, map: String?="HeroesAscent")

# Web Client
GET     /web/client                 entice.server.Global.client(chara: String, map: String?="HeroesAscent")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public/assets", file)
